{
  "$id": "https://example.com/schemas/streamConfig.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StreamConfig",
  "type": "object",
  "required": ["id","type","enabled","params"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "type": { "type": "string", "enum": ["youtube","affiliate","dropshipping","dividends","p2p","reits","courses","apps"] },
    "enabled": { "type": "boolean" },
    "params": { "type": "object" }
  },
  "additionalProperties": false,
  "allOf": [
    {
      "if": { "properties": { "type": { "const": "youtube" } } },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "required": ["uploadCadence","monetizationRate"],
            "properties": {
              "uploadCadence": { "type": "integer", "minimum": 0 },
              "monetizationRate": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "type": { "const": "affiliate" } } },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "required": ["commission"],
            "properties": {
              "commission": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "type": { "const": "dropshipping" } } },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "required": ["priceMargin"],
            "properties": {
              "priceMargin": { "type": "number" }
            },
            "additionalProperties": true
          }
        }
      }
    }
    ,
    {
      "if": { "properties": { "type": { "const": "dividends" } } },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "required": ["yieldRate","payoutFrequency"],
            "properties": {
              "yieldRate": { "type": "number", "minimum": 0 },
              "payoutFrequency": { "type": "string", "enum": ["monthly","quarterly","annual"] }
            },
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "type": { "const": "p2p" } } },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "required": ["platform","interestRate"],
            "properties": {
              "platform": { "type": "string" },
              "interestRate": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "type": { "const": "reits" } } },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "required": ["dividendYield","exposure"],
            "properties": {
              "dividendYield": { "type": "number", "minimum": 0 },
              "exposure": { "type": "string" }
            },
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "type": { "const": "courses" } } },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "required": ["price","conversionRate"],
            "properties": {
              "price": { "type": "number", "minimum": 0 },
              "conversionRate": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "additionalProperties": true
          }
        }
      }
    },
    {
      "if": { "properties": { "type": { "const": "apps" } } },
      "then": {
        "properties": {
          "params": {
            "type": "object",
            "required": ["monetizationModel","avgRevenuePerUser"],
            "properties": {
              "monetizationModel": { "type": "string", "enum": ["freemium","paid","subscription"] },
              "avgRevenuePerUser": { "type": "number", "minimum": 0 }
            },
            "additionalProperties": true
          }
        }
      }
    }
  ]
}
