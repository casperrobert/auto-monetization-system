# Environment Configuration
# Copy this file to .env and update the values as needed

# Server Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# TikTok API Configuration
TIKTOK_API_KEY=your_tiktok_api_key_here
TIKTOK_API_BASE_URL=https://api.tiktok.com/v1

# Automation Configuration
CRON_SCHEDULE=0 * * * *
TIMEZONE=UTC
RUN_ON_START=false
OUTPUT_DIR=./data
MAX_RETRIES=3
RETRY_DELAY=1000

# Backendless Configuration (Optional)
BACKENDLESS_APP_ID=your_app_id_here
BACKENDLESS_API_KEY=your_api_key_here
BACKENDLESS_TABLE=Transactions

# Amazon Affiliate Configuration
AMAZON_AFFILIATE_TAG=your_amazon_tag_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100